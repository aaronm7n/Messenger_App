doctype html
html 
    head 
        title = Signup 
    body 
        if(message)
            h4 #{message}
        form(action = "/signup", method = "POST")
                div 
                    label(for = "username") Username: 
                    input(name = "username")
                br
                div 
                    label(for = "password") Password: 
                    input(name = "password")
                br
                button(type = "submit") Sign up!