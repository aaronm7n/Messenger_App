doctype html
html
    head
        <meta name="viewport" content="width=device-width,initial-scale=1.0">
        link(rel="stylesheet" href="/css/create_room.css")
        title Add Someone To A Room!
    body
        div-wrapper
            div(class="div-wrapper")
                form(action = "/create_room", method = "POST")
                    h1 Add Someone To A Room!
                    div(class="div-input")
                        input(name = "roomName")
                
                    div(class="div-input")
                        input(name = "roomCode")
                    div(class="div-input")
                        input(name = "userName")
                    button(type = "submit") Join Room
            
