html
    head
        title Join Room
        link(rel="stylesheet" href="/css/join_room.css")
    body.centered
        if(message)
            h4 #{message}
        div(class="div-wrapper")
            form(action = "/join_room" method = "POST")
                    h1 Login here!
                    div(class="div-roomName") 
                        input(name = "roomName" type = "text" required placeholder = "Room Name")
                    br
                    div(class="div-roomCode")
                        style(color: white)
                        input(name = "roomCode" type = "password" required placeholder = "Room Code")
                    br
                    button(type = "Submit") Join Room